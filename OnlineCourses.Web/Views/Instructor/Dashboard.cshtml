@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4">
            <i class="bi bi-mortarboard"></i> Instructor Dashboard
        </h1>
        <p class="lead">Welcome to your instructor panel</p>
    </div>
</div>

<div class="row">
    <div class="col-xl-6 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="h1 mb-0">@ViewBag.TotalCourses</div>
                        <div>My Courses</div>
                    </div>
                    <div class="fa-3x">
                        <i class="bi bi-book"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-action="MyCourses">View Details</a>
                <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
            </div>
        </div>
    </div>

    <div class="col-xl-6 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="h1 mb-0">@ViewBag.TotalEnrollments</div>
                        <div>Total Students</div>
                    </div>
                    <div class="fa-3x">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-action="MyCourses">View Details</a>
                <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a class="btn btn-primary btn-block mb-2" asp-action="CreateCourse">
                            <i class="bi bi-plus-circle"></i> Create New Course
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-info btn-block mb-2" asp-action="MyCourses">
                            <i class="bi bi-book"></i> Manage My Courses
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-success btn-block mb-2" asp-controller="Courses" asp-action="List">
                            <i class="bi bi-eye"></i> View All Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
