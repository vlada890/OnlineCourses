@model OnlineCourses.Model.ViewModels.UserEnrollmentsViewModel
@{
    ViewData["Title"] = "My Enrollments";
}

<div class="container">
    <h1 class="my-4">My Enrolled Courses</h1>

    @if (Model.Enrollments.Any())
    {
        <div class="card">
            <div class="card-header">
                Your Enrolled Courses
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Course Title</th>
                                <th>Instructor</th>
                                <th>Enrolled On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td>@enrollment.CourseTitle</td>
                                    <td>@enrollment.CourseInstructor</td>
                                    <td>@enrollment.EnrolledOn.ToShortDateString()</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@enrollment.CourseId" class="btn btn-sm btn-primary">View Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>You are not enrolled in any courses yet.</p>
            <a asp-controller="Courses" asp-action="List" class="btn btn-primary mt-3">Browse Courses</a>
        </div>
    }
</div>