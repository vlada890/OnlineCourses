@model List<OnlineCourses.Domain.Entities.Enrollment>
@{
    ViewData["Title"] = "Course Enrollments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <h1><i class="bi bi-people-fill"></i> Course Enrollments</h1>
        <h4 class="text-muted">@ViewBag.Course.Title</h4>
        <p class="lead">@ViewBag.Course.Description</p>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Enrolled Students</h5>
        <div>
            <span class="badge bg-primary">Total: @Model.Count</span>
            <a asp-action="Courses" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Courses
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Enrollment Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@enrollment.User.FullName</strong>
                                </td>
                                <td>@enrollment.User.Email</td>
                                <td>
                                    <span class="badge bg-success">Active</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-person-x display-1 text-muted"></i>
                <h4 class="text-muted">No students enrolled</h4>
                <p class="text-muted">This course doesn't have any enrolled students yet.</p>
            </div>
        }
    </div>
</div>